<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
app:cardCornerRadius="@dimen/_15sdp"
    android:layout_height="wrap_content"

    android:layout_margin="@dimen/_5sdp"
    app:elevation="@dimen/_10sdp">

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgpostType"
            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_13sdp"
            android:layout_gravity="right"
            android:src="@drawable/roundicon"
            app:tint="@android:color/holo_orange_dark" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_user" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Posted By: "

                android:textColor="@color/Black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
android:capitalize="words"
                android:textColor="@color/Black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
            <TextView
                android:text="sqssss"
                android:gravity="right"
                android:id="@+id/txtDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"

                android:textColor="@color/Black"
                android:textSize="@dimen/_10sdp" />



        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"

            android:textColor="@color/Black"
            android:textSize="@dimen/_12sdp" />
        <ImageView
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/imgPost"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="horizontal">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <info.androidhive.fontawesome.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="@string/fa_eye"
                    android:textColor="@color/DarkOrange"

                    android:textSize="@dimen/_18sdp"
                    app:solid_icon="true" />

                <TextView
                    android:id="@+id/txtViews"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"

                    android:textColor="@color/Black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <info.androidhive.fontawesome.FontTextView
                    android:id="@+id/txtLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/fa_comments_solid"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_18sdp"
                    app:solid_icon="true" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Reply"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>


          <LinearLayout
              android:layout_alignParentRight="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <info.androidhive.fontawesome.FontTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"


                  android:text="@string/fa_share_alt_solid"
                  android:textColor="@color/DarkGreen"

                  android:textSize="@dimen/_18sdp"
                  app:solid_icon="true" />
              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="@dimen/_5sdp"
                  android:text="Share"
                  android:textColor="@color/Black"
                  android:textSize="@dimen/_12sdp" />
          </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textStyle="bold"
android:text="Featured Tags"
                android:textColor="@color/Black"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:id="@+id/lvSubCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:padding="@dimen/_10sdp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>