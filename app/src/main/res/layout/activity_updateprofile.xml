<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:background="@color/White"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".ui.comments.CommentsActivity">

<TextView
    android:id="@+id/txtNoComment"
    android:text="Be the first one to comment this post"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:visibility="gone"
    android:textStyle="bold"
    android:textSize="@dimen/_16sdp"
    android:textColor="@color/colorPrimary"
    android:fontFamily="@font/poppinsmedium"
    android:layout_height="wrap_content"/>


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            app:titleCentered="true"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="@string/updateprofiletitle"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">



        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:id="@+id/progressBar"
        android:layout_below="@+id/appBar"
        android:visibility="gone"

        android:indeterminate="true"
        android:layout_height="wrap_content" />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"></com.google.android.material.card.MaterialCardView>





</RelativeLayout>